<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<GridPane xmlns:fx="http://javafx.com/fxml"
          xmlns="http://javafx.com/javafx"
          stylesheets="@/stylesheets/authentication.css"
          fx:controller="com.github.brokenswing.comixaire.controller.cell.ItemCellController">

    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" percentWidth="40.0"/>
        <ColumnConstraints hgrow="SOMETIMES" percentWidth="15.0"/>
        <ColumnConstraints hgrow="SOMETIMES" percentWidth="10.0"/>
        <ColumnConstraints hgrow="SOMETIMES" percentWidth="15.0"/>
        <ColumnConstraints hgrow="SOMETIMES" percentWidth="10.0"/>
        <ColumnConstraints hgrow="SOMETIMES" percentWidth="10.0"/>
    </columnConstraints>

    <rowConstraints>
        <RowConstraints vgrow="NEVER"/>
    </rowConstraints>

    <Text fill="black" fx:id="itemTitle"/>
    <Text fill="#5282FC" fx:id="itemLocation" GridPane.columnIndex="1"/>
    <Text fill="#5282FC" fx:id="itemType" GridPane.columnIndex="2"/>
    <Text fill="#5282FC" fx:id="itemId" GridPane.columnIndex="3"/>
    <Button mnemonicParsing="false" onAction="#update" styleClass="btn" text="Update" GridPane.columnIndex="4"/>
    <Button mnemonicParsing="false" onAction="#delete" styleClass="btn-red" text="Delete" GridPane.columnIndex="5"/>

</GridPane>
