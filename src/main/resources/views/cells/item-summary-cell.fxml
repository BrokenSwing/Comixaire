<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<GridPane xmlns:fx="http://javafx.com/fxml"
          xmlns="http://javafx.com/javafx"
          stylesheets="@/stylesheets/authentication.css"
          fx:controller="com.github.brokenswing.comixaire.controller.cell.RecommendedItemCellController">

    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" percentWidth="70.0"/>
        <ColumnConstraints hgrow="SOMETIMES" percentWidth="20.0"/>
        <ColumnConstraints hgrow="SOMETIMES" percentWidth="10.0"/>
    </columnConstraints>

    <rowConstraints>
        <RowConstraints vgrow="NEVER"/>
    </rowConstraints>

    <Text fill="black" fx:id="itemTitle"/>
    <Text fill="#5282FC" fx:id="itemLocation" GridPane.columnIndex="1"/>
    <Text fill="#5282FC" fx:id="itemType" GridPane.columnIndex="2"/>

</GridPane>
