<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<GridPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8"
          stylesheets="@../../stylesheets/authentication.css"
          fx:controller="com.github.brokenswing.comixaire.controller.cell.FineCellController">

    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" percentWidth="7.0"/>
        <ColumnConstraints hgrow="SOMETIMES" percentWidth="58.0"/>
        <ColumnConstraints hgrow="SOMETIMES" percentWidth="7.0"/>
        <ColumnConstraints hgrow="SOMETIMES" percentWidth="13.0"/>
        <ColumnConstraints hgrow="SOMETIMES" percentWidth="15.0"/>
    </columnConstraints>

    <rowConstraints>
        <RowConstraints vgrow="NEVER"/>
    </rowConstraints>
    <children>
        <Text fill="grey" GridPane.columnIndex="0">
            Label:
        </Text>
        <Text fx:id="label" fill="#5282FC" GridPane.columnIndex="1"/>
        <Text fill="grey" GridPane.columnIndex="2">
            Price:
        </Text>
        <Text fx:id="price" fill="#5282FC" GridPane.columnIndex="3"/>
        <Button mnemonicParsing="false" onMouseClicked="#pay" styleClass="btn" fx:id="payButton" text="Pay"
                GridPane.columnIndex="4"/>
    </children>

</GridPane>